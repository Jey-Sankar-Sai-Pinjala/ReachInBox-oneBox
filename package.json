{
  "name": "reachinbox-onebox",
  "version": "1.0.0",
  "description": "AI-powered email onebox with real-time IMAP sync, Elasticsearch search, and RAG-based reply suggestions",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "test": "jest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:clean": "docker system prune -f && docker volume prune -f",
    "docker:clean-all": "docker system prune -a -f && docker volume prune -f",
    "docker:reset": "docker-compose down -v && docker system prune -f",
    "setup:index": "ts-node src/scripts/createIndex.ts",
    "recreate:index": "ts-node src/scripts/recreateIndex.ts",
    "setup:vectors": "ts-node src/scripts/seedVectors.ts",
    "setup:all": "npm run setup:index && npm run setup:vectors",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log"
  },
  "keywords": [
    "email",
    "imap",
    "elasticsearch",
    "ai",
    "rag",
    "typescript"
  ],
  "author": "ReachInbox Candidate",
  "license": "MIT",
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "@google/generative-ai": "^0.2.1",
    "@qdrant/js-client-rest": "^1.7.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mailparser": "^3.6.5",
    "node-imap": "^0.9.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.10.0",
    "@types/node-imap": "^0.9.3",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
